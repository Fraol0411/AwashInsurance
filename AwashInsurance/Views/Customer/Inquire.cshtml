@{
    ViewData["Title"] = "View Customer";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="form-container">
    <!-- Form Header -->
    <div class="form-header">
        <h2 class="form-title">View Customer Details</h2>
    </div>

    <!-- Navigation Links -->
    <div class="action-buttons">
        <a href="/Customer/Add" class="action-btn active">Register</a>
        <a href="/Customer/Modify" class="action-btn">Update</a>
        <a href="/Customer/Delete" class="action-btn">Remove</a>
        <a href="/Customer/Inquire" class="action-btn">View</a>
    </div>

    <!-- View Form -->
    <div class="form-body">
        <form class="form-main">
            <!-- Search Section -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">1</span>
                    <h3 class="section-title">Find Customer</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Customer ID</label>
                        <div class="input-group">
                            <input type="text" class="form-input" placeholder="Enter customer ID">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Customer Name</label>
                        <div class="input-group">
                            <input type="text" class="form-input" placeholder="Enter customer name">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-group full-width">
                    <div class="search-results">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Select</th>
                                    <th>Customer ID</th>
                                    <th>Customer Name</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="radio" name="customerToView" value="1"></td>
                                    <td>CUST001</td>
                                    <td>John Doe</td>
                                    <td>+1234567890</td>
                                    <td>Active</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </fieldset>

            <!-- Customer Details Section (shown after selection) -->
            <fieldset class="form-section" id="customerDetailsSection" style="display: none;">
                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">Customer Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Customer ID</label>
                        <input type="text" class="form-input" id="viewCustId" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-input" id="viewFullName" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Date of Birth</label>
                        <input type="text" class="form-input" id="viewDob" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Gender</label>
                        <input type="text" class="form-input" id="viewGender" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Phone Number</label>
                        <input type="text" class="form-input" id="viewPhone" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input type="text" class="form-input" id="viewEmail" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-input" id="viewAddress" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Customer Type</label>
                        <input type="text" class="form-input" id="viewCustType" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Registration Date</label>
                        <input type="text" class="form-input" id="viewRegDate" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <input type="text" class="form-input" id="viewStatus" readonly>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Notes</label>
                    <textarea class="form-textarea" id="viewNotes" readonly></textarea>
                </div>
            </fieldset>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="button" class="form-button secondary-button">
                    <span class="button-icon">↻</span> New Search
                </button>
                <button type="button" class="form-button primary-button" id="btnPrintDetails">
                    <span class="button-icon">🖨</span> Print Details
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Include shared CSS -->
<link href="~/css/customer.css" rel="stylesheet" />

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Focus first input field
        const firstInput = document.querySelector('.form-input');
        if (firstInput) firstInput.focus();

        // Add animation to form sections when they come into view
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.form-section').forEach(section => {
            section.style.opacity = 0;
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.4s ease-out';
            observer.observe(section);
        });

        // View section functionality
        const viewRadios = document.querySelectorAll('input[name="customerToView"]');
        const customerDetailsSection = document.getElementById('customerDetailsSection');
        const printDetailsBtn = document.getElementById('btnPrintDetails');

        viewRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    document.getElementById('viewCustId').value = row.cells[1].textContent;
                    document.getElementById('viewFullName').value = row.cells[2].textContent;
                    document.getElementById('viewPhone').value = row.cells[3].textContent;

                    // Simulate additional data (UI only)
                    document.getElementById('viewDob').value = "1985-05-15";
                    document.getElementById('viewGender').value = "Male";
                    document.getElementById('viewEmail').value = "john.doe@example.com";
                    document.getElementById('viewAddress').value = "123 Main St, Anytown";
                    document.getElementById('viewCustType').value = "VIP";
                    document.getElementById('viewRegDate').value = "2020-01-15";
                    document.getElementById('viewStatus').value = "Active";
                    document.getElementById('viewNotes').value = "VIP customer with special discounts";

                    customerDetailsSection.style.display = 'block';
                }
            });
        });

        // Print functionality
        printDetailsBtn.addEventListener('click', function() {
            window.print();
        });

        // Reset form
        document.querySelector('.secondary-button').addEventListener('click', function() {
            const form = this.closest('form');
            if (form) {
                form.reset();
                customerDetailsSection.style.display = 'none';
                document.querySelectorAll('input[type="radio"]').forEach(radio => {
                    radio.checked = false;
                });
            }
        });
    });
</script>