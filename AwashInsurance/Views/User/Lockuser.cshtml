<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get all action buttons and content sections
        const actionButtons = document.querySelectorAll('.action-btn');
        const contentSections = document.querySelectorAll('.content-section');

        // Add click event listeners to action buttons
        actionButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                actionButtons.forEach(btn => btn.classList.remove('active'));

                // Add active class to clicked button
                this.classList.add('active');

                // Hide all content sections
                contentSections.forEach(section => {
                    section.style.display = 'none';
                });

                // Show the corresponding content section
                const action = this.getAttribute('data-action');
                document.getElementById(`${action}Content`).style.display = 'block';
            });
        });

        // Show/hide release date based on lock type selection
        const lockTypeSelect = document.querySelector('select[name="LockType"]');
        const releaseDateGroup = document.getElementById('releaseDateGroup');

        if (lockTypeSelect && releaseDateGroup) {
            lockTypeSelect.addEventListener('change', function() {
                releaseDateGroup.style.display = this.value === 'temporary' ? 'block' : 'none';
            });

            // Initialize visibility
            releaseDateGroup.style.display = lockTypeSelect.value === 'temporary' ? 'block' : 'none';
        }

        // Unlock section functionality
        const unlockRadios = document.querySelectorAll('#unlockContent input[name="selectedUser"]');
        const unlockDetailsSection = document.getElementById('unlockDetailsSection');
        const confirmUnlockBtn = document.getElementById('btnConfirmUnlock');

        unlockRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    document.getElementById('unlockLoginID').value = row.cells[1].textContent;
                    document.getElementById('unlockEmpName').value = row.cells[2].textContent;
                    document.getElementById('unlockReason').value = row.cells[3].textContent;
                    document.getElementById('unlockDate').value = row.cells[4].textContent;

                    unlockDetailsSection.style.display = 'block';
                    confirmUnlockBtn.disabled = false;
                }
            });
        });

        // Add animation to form sections when they come into view
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.form-section').forEach(section => {
            section.style.opacity = 0;
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.4s ease-out';
            observer.observe(section);
        });
    });
</script>