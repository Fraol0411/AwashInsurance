                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">Unlock Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Login ID</label>
                        <input type="text" class="form-input" id="unlockLoginID" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Employee Name</label>
                        <input type="text" class="form-input" id="unlockEmpName" readonly>
                    </div>

