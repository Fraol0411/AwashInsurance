@{
    ViewData["Title"] = "Lock User";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="form-container">
    <!-- Form Header -->
    <div class="form-header">
        <h2 class="form-title">User Lock Management</h2>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button id="btnLock" class="action-btn active" data-action="lock">Lock User</button>
        <button id="btnUnlock" class="action-btn" data-action="unlock">Unlock User</button>
        <button id="btnView" class="action-btn" data-action="view">View Locked Users</button>
