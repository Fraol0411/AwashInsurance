@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="registration-container">
    <div class="profile-header">
        <h2>User Management</h2>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button id="btnAdd" class="action-btn" data-action="add">Add</button>
        <button id="btnModify" class="action-btn" data-action="modify">Modify</button>
        <button id="btnDelete" class="action-btn active" data-action="delete">Delete</button>
        <button id="btnInquire" class="action-btn" data-action="inquire">Inquire</button>
    </div>

    <!-- All Content Sections -->
    <div class="form-card">
        <!-- Add User Form -->
        <div id="addContent" class="content-section">
            <form method="post" action="/User/Add">
                <div class="form-section">
                    <h3 class="section-title">Add New User</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" name="FullName" required class="form-input" />
                        </div>
                        <div class="form-group">
                            <label>Login ID</label>
                            <input type="text" name="LoginID" required class="form-input" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" name="Email" required class="form-input" />
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="tel" name="Phone" required class="form-input" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>User Role</label>
                            <select name="UserRole" required class="form-input">
                                <option value="">Select Role</option>
                                <option value="Admin">Administrator</option>
                                <option value="Manager">Manager</option>
                                <option value="User">Regular User</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Department</label>
                            <select name="Department" required class="form-input">
                                <option value="">Select Department</option>
                                <option value="IT">IT</option>
                                <option value="HR">Human Resources</option>
                                <option value="Finance">Finance</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Create User</button>
                    <button type="reset" class="btn btn-secondary">Clear Form</button>
                </div>
            </form>
        </div>

        <!-- Modify User Form -->
        <div id="modifyContent" class="content-section" style="display:none;">
            <form method="post" action="/User/Modify">
                <div class="form-section">
                    <h3 class="section-title">Modify User</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Search User</label>
                            <div class="input-with-button">
                                <input type="text" placeholder="Enter user ID or name" class="form-input" />
                                <button type="button" class="search-btn">Search</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" name="FullName" class="form-input" />
                        </div>
                        <div class="form-group">
                            <label>Login ID</label>
                            <input type="text" name="LoginID" readonly class="form-input" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" name="Email" class="form-input" />
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="tel" name="Phone" class="form-input" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>User Role</label>
                            <select name="UserRole" class="form-input">
                                <option value="">Select Role</option>
                                <option value="Admin">Administrator</option>
                                <option value="Manager">Manager</option>
                                <option value="User">Regular User</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <select name="Status" class="form-input">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Suspended">Suspended</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Update User</button>
                    <button type="reset" class="btn btn-secondary">Cancel Changes</button>
                </div>
            </form>
        </div>

        <!-- Delete User Form -->
        <div id="deleteContent" class="content-section" style="display:block;">
            <form method="post" action="/User/Lock">
                <div class="form-section">
                    <h3 class="section-title">User Identification</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Login ID</label>
                            <div class="input-with-button">
                                <select name="LoginID" required class="form-input">
                                    <option value="">Select---</option>
                                    <option value="user1">user1</option>
                                    <option value="user2">user2</option>
                                    <option value="user3">user3</option>
                                </select>
                                <button type="button" class="search-btn">Search</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">User Details</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" name="UserName" readonly class="form-input" value="John Doe" />
                        </div>
                        <div class="form-group">
                            <label>User Role</label>
                            <input type="text" name="UserRole" readonly class="form-input" value="Administrator" />
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">Locking Details</h3>
                    <div class="form-grid">
                        <div class="form-row">
                            <div class="form-group">
                                <label>Locking Reason</label>
                                <textarea name="LockingReason" rows="3" class="form-input" placeholder="Enter reason for locking this account"></textarea>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Release Type</label>
                                <select name="ReleaseType" class="form-input">
                                    <option value="">Select---</option>
                                    <option value="Automatic">Automatic</option>
                                    <option value="Manual">Manual</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Release Date Time</label>
                                <input type="datetime-local" name="ReleaseDateTime" class="form-input" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form>
        </div>

        <!-- Inquire User Form -->
        <div id="inquireContent" class="content-section" style="display:none;">
            <div class="form-section">
                <h3 class="section-title">User Inquiry</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label>Search Criteria</label>
                        <div class="input-with-button">
                            <input type="text" placeholder="Enter user ID, name, or email" class="form-input" />
                            <button type="button" class="search-btn">Search</button>
                        </div>
                    </div>
                </div>

                <div class="search-results">
                    <table class="results-table">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Full Name</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Last Login</th>
                            </tr>
                        </thead>
                        <tbody>
