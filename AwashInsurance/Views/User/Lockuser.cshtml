    <!-- Lock User Content (Default) -->
    <div id="lockContent" class="form-body content-section">
        <form method="post" action="/User/Lock" class="form-main">
            <!-- Section 1: User Identification -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">1</span>
                    <h3 class="section-title">User Identification</h3>
                </legend>

                <div class="form-group">
                    <label class="form-label">Login ID</label>
                    <div class="input-group">
                        <select name="LoginID" class="form-select" required>
                            <option value="">-- Select User --</option>
                            <option value="user1">user1 (John Doe)</option>
                            <option value="user2">user2 (Jane Smith)</option>
                            <option value="user3">user3 (Mike Johnson)</option>
                        </select>
                        <button type="button" class="input-button search-button">
                            <span class="button-icon">🔍</span> Search
                        </button>
                    </div>
                </div>
            </fieldset>

            <!-- Section 2: User Details -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">User Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-input" value="John Doe" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">User Role</label>
                        <input type="text" class="form-input" value="Administrator" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Last Login</label>
                        <input type="text" class="form-input" value="2023-06-15 14:30" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Current Status</label>
                        <input type="text" class="form-input" value="Active" readonly>
                    </div>
                </div>
            </fieldset>

            <!-- Section 3: Locking Details -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">3</span>
                    <h3 class="section-title">Locking Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group full-width">
                        <label class="form-label">Lock Reason</label>
                        <textarea name="LockReason" rows="3" class="form-textarea" required placeholder="Specify reason for locking this account"></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Lock Type</label>
                        <select name="LockType" class="form-select" required>
                            <option value="">-- Select --</option>
                            <option value="temporary">Temporary</option>
                            <option value="permanent">Permanent</option>
                        </select>
                    </div>

                    <div class="form-group" id="releaseDateGroup">
                        <label class="form-label">Auto Release Date</label>
                        <input type="datetime-local" name="ReleaseDate" class="form-input">
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="form-label">Notify User?</label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="NotifyUser" class="form-checkbox" checked>
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
            </fieldset>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="button" class="form-button secondary-button">
                    <span class="button-icon">↻</span> Reset
                </button>
                <button type="submit" class="form-button primary-button">
                    <span class="button-icon">🔒</span> Lock Account
                </button>
            </div>
        </form>
    </div>

    <!-- Unlock User Content -->
