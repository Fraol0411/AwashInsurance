@{
    ViewData["Title"] = "User Registration";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="registration-container">
    <div class="profile-header">
        <h2>User Registration</h2>
    </div>

    <div class="form-card">
        <form method="post" action="/User/Register">
            <!-- User Identification Section -->
            <div class="form-section">
                <h3 class="section-title">User Identification</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label>Employee Name</label>
                        <div class="input-with-button">
                            <input type="text" name="EmployeeName" required />
                            <button type="button" class="search-btn">Search</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employee Details Section -->
            <div class="form-section">
                <h3 class="section-title">Employee Details</h3>
                <div class="form-row">
                    <div class="form-group">
                        <label>Employee Code</label>
                        <input type="text" name="EmployeeCode" required />
                    </div>
                    <div class="form-group">
                        <label>Father's Name</label>
                        <input type="text" name="FathersName" required />
                    </div>
                    <div class="form-group">
                        <label>Grandfather's Name</label>
                        <input type="text" name="GrandFatherName" required />
                    </div>
                    <div class="form-group">
                        <label>Mother's Name</label>
                        <input type="text" name="MothersName" required />
                    </div>
                </div>
            </div>

            <!-- Other Details Section -->
            <div class="form-section">
                <h3 class="section-title">Other Details</h3>
                <div class="form-grid">
                    <!-- Row 1 -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>Login ID</label>
                            <input type="text" name="LoginID" required />
                        </div>
                        <div class="form-group checkbox-group">
                            <label>Multi Unit User?</label>
                            <div class="checkbox-container">
                                <input type="checkbox" name="MultiUnitUser" />
                            </div>
                        </div>
                    </div>

                    <!-- Row 2 -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>Host Branch</label>
                            <select name="HostBranch">
                                <option>-- Select --</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>User Role</label>
                            <select name="UserRole">
                                <option>-- Select --</option>
                            </select>
                        </div>
                    </div>

                    <!-- Row 3 -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>E-Mail Address</label>
                            <input type="email" name="EmailAddress" />
                        </div>
                        <div class="form-group">
                            <label>Office Phone Number</label>
                            <input type="text" name="OfficePhoneNumber" />
                        </div>
                    </div>

                    <!-- Row 4 -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>Residence Phone Number</label>
                            <input type="text" name="ResidencePhoneNumber" />
                        </div>
                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="text" name="MobileNumber" />
                        </div>
                    </div>

                    <!-- Row 5 -->
                    <div class="form-row">
                        <div class="form-group">
                            <label>Validity Period (Days)</label>
                            <input type="number" name="ValidityPeriod" />
                        </div>
                        <div class="form-group">
                            <label>Validity Date</label>
                            <input type="date" name="ValidityDate" />
                        </div>
                    </div>

                    <!-- Row 6 -->
                    <div class="form-row">
                        <div class="form-group checkbox-group">
                            <label>Change Password On Next Login</label>
                            <div class="checkbox-container">
                                <input type="checkbox" name="ChangePassword" />
                            </div>
                        </div>
                        <div class="form-group full-width">
                            <label>Remarks</label>
                            <textarea name="Remarks" rows="2"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-danger">Delete</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --primary-color: #29699A;
        --secondary-color: #f8f9fa;
        --accent-color: #e74c3c;
        --text-color: #333;
        --border-color: #ddd;
        --shadow-color: rgba(0, 0, 0, 0.1);
        --input-gap: 15px;
    }

    .registration-container {

        /* max-width: 1200px; */
/*         margin: 10px auto; */
        margin-top:30px;
        /* background-color: white; */
        border-radius: 8px;
      /*   box-shadow: 0 2px 10px var(--shadow-color); */
        overflow: hidden;
    }

    .profile-header {
        background-color: var(--primary-color);
        color: white;
        padding: 10px;
        margin-bottom: 0;
    }

        .profile-header h2 {
            margin: 0;
            font-size: 1.2rem;
            text-align:center;
        }

    .form-card {
        padding: 15px;
    }

    .form-section {
        margin-bottom: 1px;
    }

    .section-title {
        color: var(--primary-color);
        margin-bottom: 15px;
        font-size: 1.2rem;
        padding-bottom: 5px;
        border-bottom: 1px solid var(--border-color);
        width:400px;
    }

    .form-row {
        display: flex;
/*         gap: var(--input-gap);
        margin-bottom: var(--input-gap); */
        gap:20px;
    }

    .form-group {
        flex: 1;
        min-width: 0;
        margin-left:20px;
    }

        .form-group.full-width {
            flex: 2;
        }

    .checkbox-group {
        display: flex;
        align-items: center;
        justify-content:space-evenly;
    }



    .checkbox-group .checkbox-container {
          width:300px;
    }

    label {
        display: block;
        margin: 10px 0px;
        font-weight: 500;
        color: var(--text-color);
    }

    input, select, textarea {
        width: 90%;
        padding: 10px;
        border: 1px solid var(--border-color);
        border-radius: 4px;
        font-size: 0.9rem;
        transition: border-color 0.3s;
  
    }

        input:focus, select:focus, textarea:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
        }




    .form-group input  {
        width:500px;
    }

    .form-group select {
        width: 520px;
    }

    .form-group textarea {
        width: 520px;
    }




    .input-with-button {
        display: flex;
        gap: 10px;
        max-width:600px;
    }

        .input-with-button input {
            flex: 1;
        }

    .checkbox-container {
        margin-top: 5px;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 25px;
        padding-top: 15px;
        border-top: 1px solid var(--border-color);
    }

    .btn {
        padding: 8px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-danger {
        background-color: var(--accent-color);
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-secondary {
        background-color: var(--secondary-color);
        color: var(--text-color);
    }

        .btn-secondary:hover {
            background-color: #e2e6ea;
        }

    .search-btn {
        padding: 0 15px;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .search-btn:hover {
            background-color: #2980b9;
        }

    @@media (max-width: 768px) {
        .form-row

    {
        flex-direction: column;
    }

    .form-group {
        flex: none;
        width: 100%;
    }

    }
</style>