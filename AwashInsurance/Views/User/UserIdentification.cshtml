@{
    ViewData["Title"] = "User Registration";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="form-container">
    <!-- Form Header -->
    <div class="form-header">
        <h2 class="form-title">User Registration</h2>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button id="btnAdd" class="action-btn active" data-action="add">Add</button>
        <button id="btnModify" class="action-btn" data-action="modify">Modify</button>
        <button id="btnDelete" class="action-btn" data-action="delete">Delete</button>
        <button id="btnInquire" class="action-btn" data-action="inquire">Inquire</button>
    </div>

    <!-- Main Form Content - Add Section (Default) -->
    <div id="addContent" class="form-body content-section">
        <form method="post" action="/User/Register" class="form-main">
            <!-- Section 1: User Identification -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">1</span>
                    <h3 class="section-title">User Identification</h3>
                </legend>

                <div class="form-group">
                    <label class="form-label">Employee Name</label>
                    <div class="input-group">
                        <input type="text" name="EmployeeName" class="form-input" required
                               placeholder="Enter employee name">
                        <button type="button" class="input-button search-button">
                            <span class="button-icon">🔍</span> Search
                        </button>
                    </div>
                </div>
            </fieldset>

            <!-- Section 2: Employee Details -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">Employee Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Employee Code</label>
                        <input type="text" name="EmployeeCode" class="form-input" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Father's Name</label>
                        <input type="text" name="FathersName" class="form-input" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Grandfather's Name</label>
                        <input type="text" name="GrandFatherName" class="form-input" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Mother's Name</label>
                        <input type="text" name="MothersName" class="form-input" required>
                    </div>
                </div>
            </fieldset>

            <!-- Section 3: Other Details -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">3</span>
                    <h3 class="section-title">Other Details</h3>
                </legend>

                <div class="form-grid otherdetail">
                    <div class="form-group">
                        <label class="form-label">Login ID</label>
                        <input type="text" name="LoginID" class="form-input" required>
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="form-label">Multi Unit User?</label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="MultiUnitUser" class="form-checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Host Branch</label>
                        <select name="HostBranch" class="form-select">
                            <option value="">-- Select --</option>
                            <!-- Options would be populated dynamically -->
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">User Role</label>
                        <select name="UserRole" class="form-select">
                            <option value="">-- Select --</option>
                            <!-- Options would be populated dynamically -->
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">E-Mail Address</label>
                        <input type="email" name="EmailAddress" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Office Phone Number</label>
                        <input type="tel" name="OfficePhoneNumber" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Residence Phone Number</label>
                        <input type="tel" name="ResidencePhoneNumber" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Mobile Number</label>
                        <input type="tel" name="MobileNumber" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Validity Period (Days)</label>
                        <input type="number" name="ValidityPeriod" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Validity Date</label>
                        <input type="date" name="ValidityDate" class="form-input">
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="form-label">Change Password On Next Login</label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="ChangePassword" class="form-checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">Remarks</label>
                        <textarea name="Remarks" rows="3" class="form-textarea"></textarea>
                    </div>
                </div>
            </fieldset>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="button" class="form-button secondary-button">
                    <span class="button-icon">↻</span> Reset
                </button>
                <button type="button" class="form-button danger-button">
                    <span class="button-icon">🗑</span> Delete
                </button>
                <button type="submit" class="form-button primary-button">
                    <span class="button-icon">✓</span> Save User
                </button>
            </div>
        </form>
    </div>

    <!-- Modify Content Section -->
    <div id="modifyContent" class="form-body content-section" style="display: none;">
        <form method="post" action="/User/Modify" class="form-main">
            <!-- Search Section -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">1</span>
                    <h3 class="section-title">Search User</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Employee Code</label>
                        <div class="input-group">
                            <input type="text" name="SearchEmployeeCode" class="form-input" placeholder="Enter employee code">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Employee Name</label>
                        <div class="input-group">
                            <input type="text" name="SearchEmployeeName" class="form-input" placeholder="Enter employee name">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-group full-width">
                    <div class="search-results">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Select</th>
                                    <th>Employee Code</th>
                                    <th>Employee Name</th>
                                    <th>Login ID</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Search results would be populated here -->
                                <tr>
                                    <td><input type="radio" name="selectedUser" value="1"></td>
                                    <td>EMP001</td>
                                    <td>John Doe</td>
                                    <td>johndoe</td>
                                    <td>Active</td>
                                </tr>
                                <tr>
                                    <td><input type="radio" name="selectedUser" value="2"></td>
                                    <td>EMP002</td>
                                    <td>Jane Smith</td>
                                    <td>janesmith</td>
                                    <td>Active</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </fieldset>

            <!-- Modification Form (shown after selection) -->
            <fieldset class="form-section" id="modifyFormSection" style="display: none;">
                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">Modify User Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Login ID</label>
                        <input type="text" name="ModifyLoginID" class="form-input" readonly>
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="form-label">Multi Unit User?</label>
                        <label class="checkbox-label">
                            <input type="checkbox" name="ModifyMultiUnitUser" class="form-checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="form-label">User Role</label>
                        <select name="ModifyUserRole" class="form-select">
                            <option value="">-- Select --</option>
                            <!-- Options would be populated dynamically -->
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Validity Date</label>
                        <input type="date" name="ModifyValidityDate" class="form-input">
                    </div>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Modification Remarks</label>
                    <textarea name="ModifyRemarks" rows="3" class="form-textarea"></textarea>
                </div>
            </fieldset>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="button" class="form-button secondary-button">
                    <span class="button-icon">↻</span> Reset
                </button>
                <button type="submit" class="form-button primary-button" id="btnSaveModifications" disabled>
                    <span class="button-icon">✓</span> Save Modifications
                </button>
            </div>
        </form>
    </div>

    <!-- Delete Content Section -->
    <div id="deleteContent" class="form-body content-section" style="display: none;">
        <form method="post" action="/User/Delete" class="form-main">
            <!-- Search Section -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">1</span>
                    <h3 class="section-title">Search User to Delete</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Employee Code</label>
                        <div class="input-group">
                            <input type="text" name="DeleteEmployeeCode" class="form-input" placeholder="Enter employee code">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Employee Name</label>
                        <div class="input-group">
                            <input type="text" name="DeleteEmployeeName" class="form-input" placeholder="Enter employee name">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-group full-width">
                    <div class="search-results">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Select</th>
                                    <th>Employee Code</th>
                                    <th>Employee Name</th>
                                    <th>Login ID</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Search results would be populated here -->
                                <tr>
                                    <td><input type="radio" name="userToDelete" value="1"></td>
                                    <td>EMP001</td>
                                    <td>John Doe</td>
                                    <td>johndoe</td>
                                    <td>Active</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </fieldset>

            <!-- Confirmation Section (shown after selection) -->
            <fieldset class="form-section" id="deleteConfirmationSection" style="display: none;">
                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">Confirm Deletion</h3>
                </legend>

                <div class="form-group full-width">
                    <div class="confirmation-message">
                        <p>You are about to delete the following user account:</p>
                        <div class="user-details">
                            <p><strong>Employee Code:</strong> <span id="deleteEmpCode"></span></p>
                            <p><strong>Employee Name:</strong> <span id="deleteEmpName"></span></p>
                            <p><strong>Login ID:</strong> <span id="deleteLoginID"></span></p>
                        </div>
                        <p class="warning-text">⚠️ This action cannot be undone. Are you sure you want to proceed?</p>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Deletion Reason</label>
                    <textarea name="DeleteReason" rows="3" class="form-textarea" required></textarea>
                </div>
            </fieldset>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="button" class="form-button secondary-button">
                    <span class="button-icon">↻</span> Cancel
                </button>
                <button type="submit" class="form-button danger-button" id="btnConfirmDelete" disabled>
                    <span class="button-icon">🗑</span> Confirm Delete
                </button>
            </div>
        </form>
    </div>

    <!-- Inquire Content Section -->
    <div id="inquireContent" class="form-body content-section" style="display: none;">
        <form method="post" action="/User/Inquire" class="form-main">
            <!-- Search Section -->
            <fieldset class="form-section">
                <legend class="section-header">
                    <span class="section-number">1</span>
                    <h3 class="section-title">Search User</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Employee Code</label>
                        <div class="input-group">
                            <input type="text" name="InquireEmployeeCode" class="form-input" placeholder="Enter employee code">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Employee Name</label>
                        <div class="input-group">
                            <input type="text" name="InquireEmployeeName" class="form-input" placeholder="Enter employee name">
                            <button type="button" class="input-button search-button">
                                <span class="button-icon">🔍</span> Search
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-group full-width">
                    <div class="search-results">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Select</th>
                                    <th>Employee Code</th>
                                    <th>Employee Name</th>
                                    <th>Login ID</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Search results would be populated here -->
                                <tr>
                                    <td><input type="radio" name="userToInquire" value="1"></td>
                                    <td>EMP001</td>
                                    <td>John Doe</td>
                                    <td>johndoe</td>
                                    <td>Active</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </fieldset>

            <!-- User Details Section (shown after selection) -->
            <fieldset class="form-section" id="userDetailsSection" style="display: none;">
                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">User Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Employee Code</label>
                        <input type="text" class="form-input" id="inquireEmpCode" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Employee Name</label>
                        <input type="text" class="form-input" id="inquireEmpName" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Login ID</label>
                        <input type="text" class="form-input" id="inquireLoginID" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">User Role</label>
                        <input type="text" class="form-input" id="inquireUserRole" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <input type="text" class="form-input" id="inquireStatus" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Created Date</label>
                        <input type="text" class="form-input" id="inquireCreatedDate" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Last Modified</label>
                        <input type="text" class="form-input" id="inquireLastModified" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Validity Date</label>
                        <input type="text" class="form-input" id="inquireValidityDate" readonly>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Remarks</label>
                    <textarea class="form-textarea" id="inquireRemarks" readonly></textarea>
                </div>
            </fieldset>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="button" class="form-button secondary-button">
                    <span class="button-icon">↻</span> New Search
                </button>
                <button type="button" class="form-button primary-button" id="btnPrintDetails">
                    <span class="button-icon">🖨</span> Print Details
                </button>
