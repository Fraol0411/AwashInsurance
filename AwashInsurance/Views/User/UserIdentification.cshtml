<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Focus first input field
        const firstInput = document.querySelector('.form-input');
        if (firstInput) firstInput.focus();

        // Get all action buttons and content sections
        const actionButtons = document.querySelectorAll('.action-btn');
        const contentSections = document.querySelectorAll('.content-section');

        // Add click event listeners to action buttons
        actionButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                actionButtons.forEach(btn => btn.classList.remove('active'));

                // Add active class to clicked button
                this.classList.add('active');

                // Hide all content sections
                contentSections.forEach(section => {
                    section.style.display = 'none';
                });

                // Show the corresponding content section
                const action = this.getAttribute('data-action');
                document.getElementById(`${action}Content`).style.display = 'block';
            });
        });

        // Add animation to form sections when they come into view
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.form-section').forEach(section => {
            section.style.opacity = 0;
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.4s ease-out';
            observer.observe(section);
        });

        // Modify section functionality
        const modifyRadios = document.querySelectorAll('input[name="selectedUser"]');
        const modifyFormSection = document.getElementById('modifyFormSection');
        const saveModificationsBtn = document.getElementById('btnSaveModifications');

        modifyRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    modifyFormSection.style.display = 'block';
                    saveModificationsBtn.disabled = false;
                    // Here you would typically load the user data into the form
                }
            });
        });

        // Delete section functionality
        const deleteRadios = document.querySelectorAll('input[name="userToDelete"]');
        const deleteConfirmationSection = document.getElementById('deleteConfirmationSection');
        const confirmDeleteBtn = document.getElementById('btnConfirmDelete');

        deleteRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    document.getElementById('deleteEmpCode').textContent = row.cells[1].textContent;
                    document.getElementById('deleteEmpName').textContent = row.cells[2].textContent;
                    document.getElementById('deleteLoginID').textContent = row.cells[3].textContent;

                    deleteConfirmationSection.style.display = 'block';
                    confirmDeleteBtn.disabled = false;
                }
            });
        });

        // Inquire section functionality
        const inquireRadios = document.querySelectorAll('input[name="userToInquire"]');
        const userDetailsSection = document.getElementById('userDetailsSection');
        const printDetailsBtn = document.getElementById('btnPrintDetails');

        inquireRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    document.getElementById('inquireEmpCode').value = row.cells[1].textContent;
                    document.getElementById('inquireEmpName').value = row.cells[2].textContent;
                    document.getElementById('inquireLoginID').value = row.cells[3].textContent;
                    // These would normally come from an API call with more details
                    document.getElementById('inquireUserRole').value = "Administrator";
                    document.getElementById('inquireStatus').value = "Active";
                    document.getElementById('inquireCreatedDate').value = "2023-05-15";
                    document.getElementById('inquireLastModified').value = "2023-06-20";
                    document.getElementById('inquireValidityDate').value = "2024-05-15";
                    document.getElementById('inquireRemarks').value = "System administrator with full access rights";

                    userDetailsSection.style.display = 'block';
                }
            });
        });

        // Print functionality for inquire section
        printDetailsBtn.addEventListener('click', function() {
            window.print();
        });
    });
</script>