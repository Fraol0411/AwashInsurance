<script>



      document.addEventListener('DOMContentLoaded', function() {
        // 1. Section Navigation System
        const actionButtons = document.querySelectorAll('.action-btn');
        const contentSections = document.querySelectorAll('.content-section');

        // Initialize active section from URL or default to 'add'
        const urlParams = new URLSearchParams(window.location.search);
        const initialActiveSection = urlParams.get('activeSection') || 'add';
        setActiveSection(initialActiveSection);

        // Set up button click handlers
        actionButtons.forEach(button => {
            button.addEventListener('click', function() {
                const section = this.getAttribute('data-action');
                setActiveSection(section);
            });
        });

        // 2. Form Submission Handling (for active section persistence)
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function() {
                // Update the activeSection hidden input before submission
                const activeBtn = document.querySelector('.action-btn.active');
                if (activeBtn) {
                    const section = activeBtn.getAttribute('data-action');
                    let hiddenInput = this.querySelector('input[name="activeSection"]');

                    if (!hiddenInput) {
                        hiddenInput = document.createElement('input');
                        hiddenInput.type = 'hidden';
                        hiddenInput.name = 'activeSection';
                        this.appendChild(hiddenInput);
                    }
                    hiddenInput.value = section;
                }
            });
        });

        // 3. Modify Employee Functionality
        const modifyRadios = document.querySelectorAll('input[name="selectedEmployee"]');
        const modifyForm = document.getElementById('modifyForm');

        modifyRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    const cells = row.cells;

                    document.getElementById('modifyEmployeeId').value = this.value;
                    document.getElementById('modifyFirstName').value = cells[2].textContent.split(' ')[0];
                    document.getElementById('modifyLastName').value = cells[2].textContent.split(' ')[1];

                    modifyForm.style.display = 'block';
                }
            });
        });

  
        // 4. Delete Employee Functionality
        const deleteRadios = document.querySelectorAll('input[name="employeeToDelete"]');
        const deleteForm = document.getElementById('deleteForm');

        deleteRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    const cells = row.cells;

                    document.getElementById('deleteEmployeeId').value = this.value;
                    document.getElementById('deleteEmpId').textContent = cells[1].textContent;
                    document.getElementById('deleteEmpName').textContent = cells[2].textContent;
                    document.getElementById('deleteJobTitle').textContent = cells[3].textContent;

                    deleteForm.style.display = 'block';
                }
            });
        });

        // 5. Inquire Employee Functionality
        const inquireRadios = document.querySelectorAll('input[name="employeeToView"]');
        const employeeDetails = document.getElementById('employeeDetails');

        inquireRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    const cells = row.cells;

                    document.getElementById('detailEmpId').value = cells[1].textContent;
                    document.getElementById('detailFullName').value = cells[2].textContent;

                    employeeDetails.style.display = 'block';
                }
            });
        });

        // 6. Print Functionality
        document.getElementById('btnPrintDetails')?.addEventListener('click', function() {
            window.print();
        });

        // 7. Animation System
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.form-section').forEach(section => {
            section.style.opacity = 0;
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.4s ease-out';
            observer.observe(section);
        });



        // Helper function to set active section
        function setActiveSection(section) {
            // Hide all sections
            contentSections.forEach(sec => {
                sec.style.display = 'none';
            });

            // Remove active class from all buttons
            actionButtons.forEach(btn => {
                btn.classList.remove('active');
            });

            // Show selected section and activate button
            document.getElementById(`${section}Content`).style.display = 'block';
            document.querySelector(`.action-btn[data-action="${section}"]`).classList.add('active');
        }


		// 8. Reset Button Functionality
        const resetButtons = document.querySelectorAll('.secondary-button-reset');
		resetButtons.forEach(button => {
			button.addEventListener('click', function() {
				const form = this.closest('form');
				form.reset();

			});
		});



    });


</script>