@{
    ViewData["Title"] = "Employee Management";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";

}
@* 
@model AwashInsurance.Models.Employee *@
@model List<AwashInsurance.Models.Employee>


<div class="form-container">
    <!-- Form Header -->
    <div class="form-header">
        <h2 class="form-title">Employee Management</h2>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button id="btnAdd" class="action-btn active" data-action="add">Add Employee</button>
        <button id="btnModify" class="action-btn" data-action="modify">Modify</button>
        <button id="btnDelete" class="action-btn" data-action="delete">Delete</button>
        <button id="btnInquire" class="action-btn" data-action="inquire">Inquire</button>
    </div>

    <!-- All Content Sections -->
    <div class="form-body">
        <!-- Add Employee Section -->
        <div id="addContent" class="content-section active">
            <form method="post" asp-controller="Employee" asp-action="Create" class="form-main">

                <input type="hidden" name="activeSection" value="add">

                <fieldset class="form-section">
                    <legend class="section-header">
                        <span class="section-number">1</span>
                        <h3 class="section-title">Personal Information</h3>
                    </legend>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">First Name</label>
                            <input type="text" name="FirstName"  class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Last Name</label>
                            <input type="text" name="LastName" value="" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" name="Email" value="" class="form-input">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" name="PhoneNumber" value="" class="form-input">
                        </div>
                    </div>
                </fieldset>

                <fieldset class="form-section">
                    <legend class="section-header">
                        <span class="section-number">2</span>
                        <h3 class="section-title">Employment Details</h3>
                    </legend>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Hire Date</label>
                            <input type="date" name="HireDate" value="" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Job Title</label>
                            <input type="text" name="JobTitle" value="" class="form-input">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Department</label>
                            <select name="Department" value="" class="form-select">
                                <option value="">-- Select --</option>
                                <option value="IT">IT</option>
                                <option value="HR">Human Resources</option>
                                <option value="Finance">Finance</option>
                                <option value="Operations">Operations</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Salary</label>
                            <input type="number" step="0.01" name="Salary" value="" class="form-input">
                        </div>
                    </div>
                </fieldset>

                <div class="form-actions">
                    <button type="reset" class="form-button secondary-button-reset">
                        <span class="button-icon">↻</span> Reset
                    </button>
                    <button type="submit" class="form-button primary-button">
                        <span class="button-icon">✓</span> Save Employee
                    </button>
                </div>
            </form>
        </div>


        <!-- Modify Employee Section -->
        <div id="modifyContent" class="content-section">
            <form method="get" asp-controller="Employee" asp-action="Search" class="form-main">

                <input type="hidden" name="activeSection" value="modify">

                <fieldset class="form-section">
                    <legend class="section-header">
                        <span class="section-number">1</span>
                        <h3 class="section-title">Search Employee</h3>
                    </legend>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Search by Name</label>
                            <div class="input-group">
                                <input type="text" name="searchName" class="form-input" placeholder="Enter employee name">
                                <button type="submit" class="input-button search-button">
                                    <span class="button-icon">🔍</span> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>

            <div class="search-results">
                @if (Model != null && Model.Any())
                {
                    <table class="results-table">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Employee ID</th>
                                <th>Full Name</th>
                                <th>Job Title</th>
                                <th>Department</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var emp in Model)
                            {
                                <tr>
                                    <td><input type="radio" name="selectedEmployee" value="@emp.EmployeeId"></td>
                                    <td>@emp.EmployeeId</td>
                                    <td>@emp.FirstName @emp.LastName</td>
                                    <td>@emp.JobTitle</td>
                                    <td>@emp.Department</td>
                                   @*  <td>@(emp.IsActive ? "Active" : "Inactive")</td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else if (ViewBag.Message != null)
                {
                    <p class="no-results">@ViewBag.Message</p>
                }
            </div>


            <!-- Modify Form (shown after selection) -->
            <form method="post" asp-controller="Employee" asp-action="Edit" id="modifyForm" style="display: none;">
                <fieldset class="form-section">
                    <legend class="section-header">
                        <span class="section-number">2</span>
                        <h3 class="section-title">Modify Employee</h3>
                    </legend>

                    <input type="hidden" id="modifyEmployeeId" name="EmployeeId">

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">First Name</label>
                            <input type="text" id="modifyFirstName" name="FirstName" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Last Name</label>
                            <input type="text" id="modifyLastName" name="LastName" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" id="modifyEmail" name="Email" class="form-input">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" id="modifyPhone" name="PhoneNumber" class="form-input">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Hire Date</label>
                            <input type="date" id="modifyHireDate" name="HireDate" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Job Title</label>
                            <input type="text" id="modifyJobTitle" name="JobTitle" class="form-input">
                        </div>

                        <div class="form-group">
                            <label class="form-label">Department</label>
                            <select id="modifyDepartment" name="Department" class="form-select">
                                <option value="">-- Select --</option>
                                <option value="IT">IT</option>
                                <option value="HR">Human Resources</option>
                                <option value="Finance">Finance</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Salary</label>
                            <input type="number" step="0.01" id="modifySalary" name="Salary" class="form-input">
                        </div>

                        <div class="form-group checkbox-group">
                            <label class="form-label">Active Status</label>
                            <label class="checkbox-label">
                                <input type="checkbox" id="modifyIsActive" name="IsActive" class="form-checkbox">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                </fieldset>

                <div class="form-actions">
                    <button type="button" class="form-button secondary-button-reset">
                        <span class="button-icon">↻</span> Cancel
                    </button>
                    <button type="submit" class="form-button primary-button">
                        <span class="button-icon">✓</span> Update Employee
                    </button>
                </div>
            </form>
        </div>

        <!-- Delete Employee Section -->
        <div id="deleteContent" class="content-section">
            <form method="get" asp-controller="Employee" asp-action="Search" class="form-main">

                <input type="hidden" name="activeSection" value="modify">

                <fieldset class="form-section">
                    <legend class="section-header">
                        <span class="section-number">1</span>
                        <h3 class="section-title">Search Employee</h3>
                    </legend>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Search by Name</label>
                            <div class="input-group">
                                <input type="text" name="searchName" class="form-input" placeholder="Enter employee name">
                                <button type="submit" class="input-button search-button">
                                    <span class="button-icon">🔍</span> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>

            <div class="search-results">
                @if (Model != null && Model.Any())
                {
                    <table class="results-table">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Employee ID</th>
                                <th>Full Name</th>
                                <th>Job Title</th>
                                <th>Department</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var emp in Model)
                            {
                                <tr>
                                    <td><input type="radio" name="selectedEmployee" value="@emp.EmployeeId"></td>
                                    <td>@emp.EmployeeId</td>
                                    <td>@emp.FirstName @emp.LastName</td>
                                    <td>@emp.JobTitle</td>
                                    <td>@emp.Department</td>
                                    @*  <td>@(emp.IsActive ? "Active" : "Inactive")</td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else if (ViewBag.Message != null)
                {
                    <p class="no-results">@ViewBag.Message</p>
                }
            </div>

            <!-- Delete Confirmation (shown after selection) -->
            <form method="post" asp-controller="Employee" asp-action="Delete" id="deleteForm" style="display: none;">
                <fieldset class="form-section">
                    <legend class="section-header">
                        <span class="section-number">2</span>
                        <h3 class="section-title">Confirm Deletion</h3>
                    </legend>

                    <input type="hidden" id="deleteEmployeeId" name="EmployeeId">

                    <div class="form-group full-width">
                        <div class="confirmation-message">
                            <p>You are about to delete the following employee:</p>
                            <div class="user-details">
                                <p><strong>Employee ID:</strong> <span id="deleteEmpId"></span></p>
                                <p><strong>Full Name:</strong> <span id="deleteEmpName"></span></p>
                                <p><strong>Job Title:</strong> <span id="deleteJobTitle"></span></p>
                            </div>
                            <p class="warning-text">⚠️ This action cannot be undone. Are you sure you want to proceed?</p>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label class="form-label">Deletion Reason</label>
                        <textarea name="DeletionReason" rows="3" class="form-textarea" required></textarea>
                    </div>
                </fieldset>

                <div class="form-actions">
                    <button type="button" class="form-button secondary-button-reset">
                        <span class="button-icon">↻</span> Cancel
                    </button>
                    <button type="submit" class="form-button danger-button">
                        <span class="button-icon">🗑</span> Confirm Delete
                    </button>
                </div>
            </form>
        </div>

        <!-- Inquire Employee Section -->
        <div id="inquireContent" class="content-section">
            <form method="get" asp-controller="Employee" asp-action="Search" class="form-main">

                <input type="hidden" name="activeSection" value="modify">

                <fieldset class="form-section">
                    <legend class="section-header">
                        <span class="section-number">1</span>
                        <h3 class="section-title">Search Employee</h3>
                    </legend>

                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Search by Name</label>
                            <div class="input-group">
                                <input type="text" name="searchName" class="form-input" placeholder="Enter employee name">
                                <button type="submit" class="input-button search-button">
                                    <span class="button-icon">🔍</span> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>

            <div class="search-results">
                @if (Model != null && Model.Any())
                {
                    <table class="results-table">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Employee ID</th>
                                <th>Full Name</th>
                                <th>Job Title</th>
                                <th>Department</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var emp in Model)
                            {
                                <tr>
                                    <td><input type="radio" name="selectedEmployee" value="@emp.EmployeeId"></td>
                                    <td>@emp.EmployeeId</td>
                                    <td>@emp.FirstName @emp.LastName</td>
                                    <td>@emp.JobTitle</td>
                                    <td>@emp.Department</td>
                                    @*  <td>@(emp.IsActive ? "Active" : "Inactive")</td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else if (ViewBag.Message != null)
                {
                    <p class="no-results">@ViewBag.Message</p>
                }
            </div>

            <!-- Employee Details (shown after selection) -->
            <div id="employeeDetails" class="form-section" style="display: none;">
                <legend class="section-header">
                    <span class="section-number">2</span>
                    <h3 class="section-title">Employee Details</h3>
                </legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Employee ID</label>
                        <input type="text" id="detailEmpId" class="form-input" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Full Name</label>
                        <input type="text" id="detailFullName" class="form-input" readonly>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="text" id="detailEmail" class="form-input" readonly>
                    </div>

                    <div class="form-group">
