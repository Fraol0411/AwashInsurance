
<div class="sidebar">
    <div class="sidebar-container">
        <div class="expand" onclick="toggleSidebar()">
            <img src="~/images/expand.png" alt="expand">
        </div>
        <div class="sidebar-list">
            <ul class="sidebar-menu">
                <li>
                    <a href="#" class="menu-item">Side selection</a>
                    <ul class="submenu">
                        <li><a asp-controller="Styleview" asp-action="Styleview" onclick="hideSidebar()">Layout page</a></li>
                        <li><a href="#" onclick="hideSidebar()">Side selection</a></li>
                        <li>
                            <a href="#" class="menu-item">Side selection</a>
                            <ul class="submenu">
                                <li><a asp-controller="Employees" asp-action="Employees" onclick="hideSidebar()">Side selection</a></li>
                            </ul>
                        </li>
                    </ul>
                </li>

                  <li>
                    <a href="#" class="menu-item">Side selection 2</a>
                    <ul class="submenu">
                        <li><a asp-controller="Styleview" asp-action="Styleview" onclick="hideSidebar()">Layout page</a></li>
                        <li><a href="#" onclick="hideSidebar()">Side selection</a></li>
                        <li>
                            <a href="#" class="menu-item">Side selection</a>
                            <ul class="submenu">
                                <li><a asp-controller="Employees" asp-action="Employees" onclick="hideSidebar()">Side selection</a></li>
                            </ul>
                        </li>
                    </ul>
                </li>


            </ul>
        </div>
    </div>
</div>

<style>
    .sidebar {
        width: 40px; /* Initially small width */
        height: 100vh;
        background: #29699A;
        color: white;
        padding: 10px;
        position: fixed;
        left: 0;
        top: 35px;
        font-family: Arial, sans-serif;
        transition: width 0.3s ease-in-out;
       /*  overflow: hidden; */

    }

        .sidebar.expanded {
            width: 230px; /* Expanded width */
            
        }

    .expand img {
        width: 30px;
        height: auto;
        cursor: pointer;
        border-radius: 10px;
        padding:10px;
        transition: transform 0.3s ease-in-out;

    }

    .sidebar.expanded .expand img {
        transform: rotate(180deg);
    }

    .sidebar-container {
        display: flex;
        /* flex-direction: column; */
        gap: 10px;
    }

    .sidebar-list {
        display: none;
    }

    .sidebar.expanded .sidebar-list {
        display: block;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0;
        width: 100%;
    }

        .sidebar-menu li {
            margin: 5px 0;
            /* border-bottom: 1px solid #2C3E50; */
            width: 100%;

        }

        .sidebar-menu a {
            text-decoration: none;
            color: white;
            font-size: 0.7rem;
            display: block;
            padding: 5px;
            border-radius: 5px;
            transition: 0.3s;
            text-align: left;
            display: block;
            width: 100%;
            padding: 5px 15px;
            color: white;
            text-decoration: none;
            background: transparent;
            border-radius: 5px;
            transition: background 0.3s;

            display:flex;
            gap:5px;
            width:120px;
            justify-content:space-between;

            
        }

            .sidebar-menu a:hover {
                background: #34495E;
            }

        .sidebar-menu .menu-item {
            background-color: #1b4d7a;
            font-weight: bold;
        }

    .submenu {
        display: none;
        list-style: none;
        padding: 0px 0 0px 20px;
  
    }

        .submenu.active {
            display: block;
        }

    .menu-item::after {
        content: ' ▼';
        float: right;
    }

    .submenu.active + .menu-item::after {
        content: ' ▲';
    }


</style>

<script>
    function toggleSidebar() {
        document.querySelector(".sidebar").classList.toggle("expanded");
    }

    function hideSidebar() {
        document.querySelector(".sidebar").classList.remove("expanded");
    }

    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".menu-item").forEach(item => {
            item.addEventListener("click", function (event) {
                event.preventDefault();
                let submenu = item.nextElementSibling;
                if (submenu && submenu.classList.contains("submenu")) {
                    submenu.classList.toggle("active");
                    event.stopPropagation();
                }
            });
        });
    });
</script>
