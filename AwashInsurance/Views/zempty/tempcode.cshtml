<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Focus first input field
        const firstInput = document.querySelector('.form-input');
        if (firstInput) firstInput.focus();

        // Get all action buttons and content sections
        const actionButtons = document.querySelectorAll('.action-btn');
        const contentSections = document.querySelectorAll('.content-section');

        // Add click event listeners to action buttons
        actionButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                actionButtons.forEach(btn => btn.classList.remove('active'));

                // Add active class to clicked button
                this.classList.add('active');

                // Hide all content sections
                contentSections.forEach(section => {
                    section.style.display = 'none';
                });

                // Show the corresponding content section
                const action = this.getAttribute('data-action');
                document.getElementById(`${action}Content`).style.display = 'block';
            });
        });

        // Add animation to form sections when they come into view
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.form-section').forEach(section => {
            section.style.opacity = 0;
            section.style.transform = 'translateY(20px)';
            section.style.transition = 'all 0.4s ease-out';
            observer.observe(section);
        });

        // Update section functionality
        const updateRadios = document.querySelectorAll('input[name="selectedCustomer"]');
        const updateFormSection = document.getElementById('modifyFormSection');
        const saveUpdatesBtn = document.getElementById('btnSaveUpdates');

        updateRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    updateFormSection.style.display = 'block';
                    saveUpdatesBtn.disabled = false;

                    // Simulate loading data (UI only)
                    const row = this.closest('tr');
                    const form = updateFormSection.querySelector('form');
                    form.querySelector('input[type="text"]').value = row.cells[1].textContent;
                    form.querySelectorAll('input[type="text"]')[1].value = row.cells[2].textContent;
                    form.querySelector('input[type="tel"]').value = row.cells[3].textContent;
                }
            });
        });

        // Remove section functionality
        const deleteRadios = document.querySelectorAll('input[name="customerToDelete"]');
        const deleteConfirmationSection = document.getElementById('deleteConfirmationSection');
        const confirmDeleteBtn = document.getElementById('btnConfirmDelete');

        deleteRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    document.getElementById('deleteCustId').textContent = row.cells[1].textContent;
                    document.getElementById('deleteCustName').textContent = row.cells[2].textContent;
                    document.getElementById('deletePhone').textContent = row.cells[3].textContent;

                    deleteConfirmationSection.style.display = 'block';
                    confirmDeleteBtn.disabled = false;
                }
            });
        });

        // View section functionality
        const viewRadios = document.querySelectorAll('input[name="customerToView"]');
        const customerDetailsSection = document.getElementById('customerDetailsSection');
        const printDetailsBtn = document.getElementById('btnPrintDetails');

        viewRadios.forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    document.getElementById('viewCustId').value = row.cells[1].textContent;
                    document.getElementById('viewFullName').value = row.cells[2].textContent;
                    document.getElementById('viewPhone').value = row.cells[3].textContent;

                    // Simulate additional data (UI only)
                    document.getElementById('viewDob').value = "1985-05-15";
                    document.getElementById('viewGender').value = "Male";
                    document.getElementById('viewEmail').value = "john.doe@example.com";
                    document.getElementById('viewAddress').value = "123 Main St, Anytown";
                    document.getElementById('viewCustType').value = "VIP";
                    document.getElementById('viewRegDate').value = "2020-01-15";
                    document.getElementById('viewStatus').value = "Active";
                    document.getElementById('viewNotes').value = "VIP customer with special discounts";

                    customerDetailsSection.style.display = 'block';
                }
            });
        });

        // Print functionality for view section
        printDetailsBtn.addEventListener('click', function() {
            window.print();
        });

        // Reset forms when switching sections
        document.querySelectorAll('.secondary-button').forEach(button => {
            button.addEventListener('click', function() {
                const form = this.closest('form');
                if (form) {
                    form.reset();

                    // Hide any secondary sections
                    if (updateFormSection) updateFormSection.style.display = 'none';
                    if (deleteConfirmationSection) deleteConfirmationSection.style.display = 'none';
                    if (customerDetailsSection) customerDetailsSection.style.display = 'none';

                    // Disable buttons
                    if (saveUpdatesBtn) saveUpdatesBtn.disabled = true;
                    if (confirmDeleteBtn) confirmDeleteBtn.disabled = true;

                    // Uncheck radio buttons
                    document.querySelectorAll('input[type="radio"]').forEach(radio => {
                        radio.checked = false;
                    });
                }
            });
        });
    });
</script>



