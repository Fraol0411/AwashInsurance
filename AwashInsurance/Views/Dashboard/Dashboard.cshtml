@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="dashboard-container">
    <!-- Welcome Section with Logo -->
    <div class="welcome-banner">
        <div class="dashboard-logo-container">
            <img src="~/images/logo.png" alt="Insurance ERP Logo">
        </div>
        <div class="welcome-text">
            <h1>Welcome Back, <span class="username">User</span>!</h1>
            <p>Your latest insurance insights at a glance</p>
        </div>
    </div>

    <!-- Dashboard Cards -->
    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">👥</div>
            <h3>100+</h3>
            <p>Active CIF</p>
            <div class="stat-trend indicator-up">5% increase</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">📄</div>
            <h3>250</h3>
            <p>Policy Generated</p>
            <div class="stat-trend indicator-up">12% increase</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">🔄</div>
            <h3>85%</h3>
            <p>Renewal Done</p>
            <div class="stat-trend indicator-down">3% decrease</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">🏢</div>
            <h3>20</h3>
            <p>Corporate Customer</p>
            <div class="stat-trend indicator-up">2 new</div>
        </div>
    </div>

    <!-- Recent Activities Section -->
    <div class="recent-activities">
        <h2><span class="section-icon">📋</span> Recent Activities</h2>
        <div class="activities-grid">
            <div class="activity-card">
                <div class="activity-icon">✅</div>
                <div class="activity-content">
                    <h4>Policy #POL-2023-1256</h4>
                    <p>Renewed successfully</p>
                    <span class="activity-time">2 hours ago</span>
                </div>
            </div>
            <div class="activity-card">
                <div class="activity-icon">➕</div>
                <div class="activity-content">
                    <h4>New Customer</h4>
                    <p>ABC Corporation registered</p>
                    <span class="activity-time">5 hours ago</span>
                </div>
            </div>
            <div class="activity-card">
                <div class="activity-icon">⚠️</div>
                <div class="activity-content">
                    <h4>Claim Submitted</h4>
                    <p>Claim #CLM-2023-0456 needs review</p>
                    <span class="activity-time">1 day ago</span>
                </div>
            </div>
            <div class="activity-card">
                <div class="activity-icon">📧</div>
                <div class="activity-content">
                    <h4>Notification Sent</h4>
                    <p>Renewal reminders sent to 15 clients</p>
                    <span class="activity-time">2 days ago</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS Styling -->
<style>
    /* Base Styles */
    .dashboard-container {
        padding: 20px;
        background-color: #f5f7fa;
        min-height: 100vh;
    }

    /* Welcome Banner */
    .welcome-banner {
        background: linear-gradient(135deg, #0F2D52, #29699A);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        box-shadow: 0 10px 20px rgba(15, 45, 82, 0.1);
        position: relative;
        overflow: hidden;
    }

        .welcome-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path fill="rgba(255,255,255,0.03)" d="M0,0 L100,0 L100,100 Q50,80 0,100 Z"></path></svg>');
            background-size: 100% 100%;
            opacity: 0.5;
        }

    .dashboard-logo-container {
        width: 80px;
        height: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        padding: 15px;
        margin-right: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
    }

        .dashboard-logo-container img {
            max-width: 100%;
            height: auto;
            filter: brightness(0) invert(1);
        }

    .welcome-text h1 {
        font-size: 2rem;
        margin-bottom: 5px;
        font-weight: 600;
    }

    .welcome-text p {
        opacity: 0.9;
        font-size: 1rem;
    }

    .username {
        color: #FFD700;
    }

    /* Dashboard Stats */
    .dashboard-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .stat-icon {
        font-size: 2rem;
        margin-bottom: 10px;
        opacity: 0.8;
    }

    .stat-card h3 {
        font-size: 2.2rem;
        color: #29699A;
        margin: 10px 0;
        font-weight: 600;
    }

    .stat-card p {
        font-size: 1rem;
        color: #666;
        margin-bottom: 10px;
    }

    .stat-trend {
        font-size: 0.85rem;
        padding: 5px 10px;
        border-radius: 20px;
        display: inline-block;
    }

    .indicator-up {
        background: rgba(76, 175, 80, 0.1);
        color: #4CAF50;
    }

        .indicator-up::before {
            content: '↑';
            margin-right: 5px;
        }

    .indicator-down {
        background: rgba(244, 67, 54, 0.1);
        color: #F44336;
    }

        .indicator-down::before {
            content: '↓';
            margin-right: 5px;
        }

    /* Recent Activities */
    .recent-activities {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

        .recent-activities h2 {
            color: #29699A;
            margin-bottom: 20px;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

    .section-icon {
        margin-right: 10px;
        font-size: 1.3rem;
    }

    .activities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .activity-card {
        display: flex;
        padding: 15px;
        border-radius: 10px;
        background: #f9f9f9;
        transition: all 0.3s;
    }

        .activity-card:hover {
            background: #f0f4f8;
            transform: translateX(5px);
        }

    .activity-icon {
        font-size: 1.5rem;
        margin-right: 15px;
        align-self: center;
    }

    .activity-content h4 {
        margin: 0 0 5px 0;
        color: #333;
        font-size: 1rem;
    }

    .activity-content p {
        margin: 0 0 5px 0;
        color: #666;
        font-size: 0.9rem;
    }

    .activity-time {
        color: #999;
        font-size: 0.8rem;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .welcome-banner {
            flex-direction: column;
            text-align: center;
            padding: 25px 20px;
        }

        .dashboard-logo-container {
            margin-right: 0;
            margin-bottom: 15px;
            width: 70px;
            height: 70px;
        }

        .dashboard-stats {
            grid-template-columns: 1fr 1fr;
        }

        .activities-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 480px) {
        .dashboard-stats {
            grid-template-columns: 1fr;
        }

        .welcome-text h1 {
            font-size: 1.5rem;
        }
    }
</style>