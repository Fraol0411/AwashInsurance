@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-banner">
        <h1>Welcome Back, <span class="username">User</span>!</h1>
        <p>Your latest insights at a glance.</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="dashboard-stats">
        <div class="stat-card">
            <h3>100+</h3>
            <p>Active CIF</p>
        </div>
        <div class="stat-card">
            <h3>250</h3>
            <p>Policy Generated</p>
        </div>
        <div class="stat-card">
            <h3>85%</h3>
            <p>Renewal Done</p>
        </div>
        <div class="stat-card">
            <h3>20</h3>
            <p>Corporate Customer</p>
        </div>
    </div>

    <!-- Recent Activities Section -->
    <div class="recent-activities">

    </div>
</div>

<!-- CSS Styling -->
<style>
    .dashboard-container {
        /* max-width: 1200px; */
        margin: auto;
        padding: 20px;
    }

    .welcome-banner {
        background: linear-gradient(90deg, #007bff, #6610f2);
        color: white;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        margin-bottom: 20px;
    
    }

    .username {
        font-weight: bold;
    }

    .dashboard-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .stat-card {
        background: white;

        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .stat-card h3 {
            font-size: 2rem;
            color: #007bff;
            margin: 0;
        }

        .stat-card p {
            font-size: 1rem;
            color: gray;
        }

    .recent-activities {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .recent-activities h2 {
            margin-bottom: 10px;
        }

        .recent-activities ul {
            list-style: none;
            padding: 0;
        }

        .recent-activities li {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
</style>
