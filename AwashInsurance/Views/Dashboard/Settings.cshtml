<style>
    /* ==============================================
           USER PROFILE PAGE SPECIFIC STYLES
           All classes prefixed with 'user-profile-' to avoid conflicts
           ============================================== */

    /* Base Variables - Scoped to this page only */
    .user-profile-container {
        --user-profile-primary-color: #29699A;
        --user-profile-primary-light: #3a7cad;
        --user-profile-primary-lighter: #e1eaf0;
        --user-profile-secondary-color: #f8f9fa;
        --user-profile-accent-color: #e74c3c;
        --user-profile-accent-light: #f8e0dd;
        --user-profile-success-color: #2ecc71;
        --user-profile-text-color: #333;
        --user-profile-text-light: #666;
        --user-profile-border-color: #ddd;
        --user-profile-border-radius: 6px;
        --user-profile-box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
        --user-profile-transition: all 0.3s ease;
    }

    /* Container Styles */
    .user-profile-container {
        margin: 30px auto;
/*         max-width: 1200px; */
        overflow: hidden;
    }

    /* Header Styles */
    .user-profile-header {
        background: var(--user-profile-primary-color);
        color: white;
        padding: 20px 30px;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .user-profile-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
    }

    /* Body Styles */
    .user-profile-body {
        padding: 25px 30px;
        background: white;
    }

    /* Layout Styles */
    .user-profile-layout {
        display: flex;
        gap: 30px;
    }

    /* Sidebar Styles */
    .user-profile-sidebar {
        width: 280px;
        flex-shrink: 0;
    }

    .user-profile-card {
        background: white;
        border-radius: var(--user-profile-border-radius);
        padding: 20px;
        box-shadow: var(--user-profile-box-shadow);
        text-align: center;
        margin-bottom: 20px;
    }

    .user-profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--user-profile-primary-lighter);
        margin-bottom: 15px;
    }

    .user-profile-avatar-upload-button {
        display: inline-block;
        padding: 8px 15px;
        background: var(--user-profile-primary-lighter);
        color: var(--user-profile-primary-color);
        border-radius: var(--user-profile-border-radius);
        cursor: pointer;
        font-size: 0.9rem;
        margin-top: 10px;
        transition: var(--user-profile-transition);
    }

        .user-profile-avatar-upload-button:hover {
            background: var(--user-profile-primary-light);
            color: white;
        }

    .user-profile-name {
        margin: 10px 0 5px;
        color: var(--user-profile-primary-color);
        font-size: 1.2rem;
    }

    .user-profile-role,
    .user-profile-branch {
        margin: 5px 0;
        color: var(--user-profile-text-light);
        font-size: 0.9rem;
    }

    .user-profile-status {
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid var(--user-profile-border-color);
    }

    .user-profile-status-badge {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

        .user-profile-status-badge.active {
            background: #e8f8f0;
            color: #27ae60;
        }

    .user-profile-last-login {
        display: block;
        font-size: 0.8rem;
        color: var(--user-profile-text-light);
        margin-top: 5px;
    }

    /* Navigation Styles */
    .user-profile-navigation {
        background: white;
        border-radius: var(--user-profile-border-radius);
        box-shadow: var(--user-profile-box-shadow);
        padding: 15px 0;
    }

        .user-profile-navigation ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .user-profile-navigation li {
            padding: 12px 20px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: var(--user-profile-transition);
            border-left: 3px solid transparent;
        }

            .user-profile-navigation li:hover {
                background: var(--user-profile-primary-lighter);
            }

        .user-profile-navigation .user-profile-nav-active {
            background: var(--user-profile-primary-lighter);
            border-left-color: var(--user-profile-primary-color);
            font-weight: 500;
        }

    .user-profile-nav-icon {
        font-size: 1.1rem;
    }

    /* Content Styles */
    .user-profile-content {
        flex-grow: 1;
    }

    .user-profile-content-section {
        display: none;
    }

        .user-profile-content-section.active {
            display: block;
        }

    /* Form Styles */
    .user-profile-form {
        width: 100%;
    }

    .user-profile-form-section {
        border: 1px solid var(--user-profile-border-color);
        border-radius: var(--user-profile-border-radius);
        padding: 20px;
        margin-bottom: 25px;
        background: #F4FAFF;
    }

    .user-profile-section-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--user-profile-border-color);
    }

    .user-profile-section-number {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        background: var(--user-profile-primary-color);
        color: white;
        border-radius: 50%;
        margin-right: 12px;
        font-weight: bold;
    }

    .user-profile-section-title {
        margin: 0;
        font-size: 1.2rem;
        color: var(--user-profile-primary-color);
    }

    .user-profile-form-grid {
        display: flex;
        gap: 60px;
        flex-wrap: wrap;
    }

    .user-profile-form-group {
        width: 250px;
        margin-bottom: 15px;
    }

        .user-profile-form-group.full-width {
            width: 100%;
        }

    .user-profile-form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: var(--user-profile-text-color);
        font-size: 0.95rem;
    }

    .user-profile-form-input,
    .user-profile-form-select,
    .user-profile-form-textarea {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid var(--user-profile-border-color);
        border-radius: var(--user-profile-border-radius);
        font-size: 0.95rem;
        transition: var(--user-profile-transition);
        background: white;
    }

        .user-profile-form-input:focus,
        .user-profile-form-select:focus,
        .user-profile-form-textarea:focus {
            outline: none;
            border-color: var(--user-profile-primary-color);
            box-shadow: 0 0 0 3px rgba(41,105,154,0.1);
        }

        .user-profile-form-input[readonly],
        .user-profile-form-textarea[readonly] {
            background-color: #f5f5f5;
            border-color: #e0e0e0;
        }

    .user-profile-form-textarea {
        min-height: 100px;
        resize: vertical;
    }

    /* Button Styles */
    .user-profile-form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid var(--user-profile-border-color);
    }

    .user-profile-form-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 20px;
        border: none;
        border-radius: var(--user-profile-border-radius);
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        transition: var(--user-profile-transition);
    }

        .user-profile-form-button.primary {
            background: var(--user-profile-primary-color);
            color: white;
        }

            .user-profile-form-button.primary:hover {
                background: var(--user-profile-primary-light);
                transform: translateY(-2px);
            }

        .user-profile-form-button.secondary {
            background: var(--user-profile-secondary-color);
            color: var(--user-profile-text-color);
            border: 1px solid var(--user-profile-border-color);
        }

            .user-profile-form-button.secondary:hover {
                background: #e2e6ea;
            }

    .user-profile-button-icon {
        margin-right: 8px;
    }

    /* Responsive Design */
    @@media (max-width: 992px) {
        .user-profile-layout {
            flex-direction: column;
        }

        .user-profile-sidebar {
            width: 100%;
        }
    }

    @@media (max-width: 768px) {
        .user-profile-form-grid {
            flex-direction: column;
            gap: 15px;
        }

        .user-profile-form-group {
            width: 100%;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Navigation between sections
        const navItems = document.querySelectorAll('.user-profile-navigation li');
        const contentSections = document.querySelectorAll('.user-profile-content-section');

        navItems.forEach(item => {
            item.addEventListener('click', function() {
                // Remove active class from all nav items
                navItems.forEach(navItem => navItem.classList.remove('user-profile-nav-active'));

                // Add active class to clicked item
                this.classList.add('user-profile-nav-active');

                // Hide all content sections
                contentSections.forEach(section => section.classList.remove('active'));

                // Show the corresponding section
                const sectionId = 'userProfile' + this.getAttribute('data-section') + 'Section';
                document.getElementById(sectionId).classList.add('active');
            });
        });

        // Avatar upload preview
        const avatarInput = document.getElementById('userProfileAvatarInput');
        const avatarPreview = document.getElementById('userProfileAvatarPreview');

        if (avatarInput && avatarPreview) {
            avatarInput.addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        avatarPreview.src = e.target.result;
                    }
                    reader.readAsDataURL(file);
                }
            });
        }

        // Password strength indicator
        const passwordInput = document.querySelector('.user-profile-content-section.active input[name="NewPassword"]');
        const strengthBars = document.querySelectorAll('.user-profile-strength-bar');

        if (passwordInput && strengthBars.length > 0) {
            passwordInput.addEventListener('input', function() {
                const strength = Math.min(3, Math.floor(this.value.length / 3));

                strengthBars.forEach((bar, index) => {
                    if (index < strength) {
                        bar.style.background = index < 1 ? '#e74c3c' : index === 1 ? '#f39c12' : '#2ecc71';
                    } else {
                        bar.style.background = '#e0e0e0';
                    }
                });
            });
        }
    });
</script>