@model AwashInsurance.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="form-container">
    <div class="form-header">
        <h2 class="form-title">Employee Details</h2>
    </div>

    <div class="form-body">
        <div class="form-section">
            <div class="section-header">
                <div class="section-number">1</div>
                <h3 class="section-title">Employee Information</h3>
            </div>

            <div class="details-grid">
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.FullName)</span>
                    <span class="detail-value">@Html.DisplayFor(model => model.FullName)</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.DateOfBirth)</span>
                    <span class="detail-value">@Model.DateOfBirth.ToString("yyyy-MM-dd")</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Gender)</span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Gender)</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Email)</span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Email)</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Phone)</span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Phone)</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Position)</span>
                    <span class="detail-value">@Html.DisplayFor(model => model.Position)</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.HireDate)</span>
                    <span class="detail-value">@Model.HireDate.ToString("yyyy-MM-dd")</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.IsActive)</span>
                    <span class="detail-value">
                        <span class="checkbox-label">
                            <input type="checkbox" @(Model.IsActive ? "checked" : "") disabled class="form-checkbox" />
                            <span class="checkmark"></span>
                        </span>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="form-button primary-button">Edit</a>
            <a asp-action="Index" class="form-button secondary-button">Back to List</a>
        </div>
    </div>
</div>

<style>
    /* Additional styles for details view */
    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 15px;
    }

    .detail-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
    }

    .detail-label {
        font-weight: 500;
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .detail-value {
        padding: 10px 15px;
        background: white;
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        font-size: 0.95rem;
    }
</style>

<!-- Include shared CSS -->
<link href="~/css/pagestyle.css" rel="stylesheet" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}